@model Ilahiyyat.ViewModel.SingleSermonModel
@{
    ViewBag.Title = "Single_sermon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <div class="box1">
        <div class="overlay2">
            <img src="~/Assets/img/hdg-img.png" alt="">
            <h1>XÜTBƏ</h1>
        </div>
    </div>
    <section id="single_sermon">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <div class="srmn">
                        <div class="sermon_img">
                            <img src="~/Assets/img/blog-2.jpg" alt="">
                        </div>
                        <div class="sermon_audio">
                            <audio controls>
                                <source src="@Model._sermon.xutbə_audio" type="audio/ogg">
                            </audio>
                        </div>
                        <div class="sermon_content">
                            <h4>@Model._sermon.xutbə_adi</h4>
                            <p>
                            @Model._sermon.xutbə_məzmunu   
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <div class="recent">
                        <h5>Son Xütbələr</h5>
                        @foreach (var item in Model._sermons)
    {
                    <a href="/Home/Single_sermon/@item.id"><p>@item.xutbə_adi</p></a>
                    <audio controls>
                        <source src="@item.xutbə_məzmunu" type="audio/ogg">
                    </audio>
                    <div class="line"></div>
}
                       
                    </div>
                    <iframe width="100%" height="315" style="margin-bottom: 30px;" src="https://www.youtube.com/embed/jWoXnWCt8tM" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </section>

 


