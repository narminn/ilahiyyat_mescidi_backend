@model Ilahiyyat.ViewModel.SingleNewsModel
@{
    ViewBag.Title = "Single_news";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 
    <div class="box1">
        <div class="overlay2">
            <img src="~/Assets/img/hdg-img.png" alt="">
            <p>XƏBƏR</p>
            <!-- <img src="~/Assets/img/mosque.png" alt=""> -->
        </div>
    </div>
    <section id="single_news">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <div class="news">
                        <div class="news_img">
                            <img src="@Model._single_news.xəberin_şəkili" alt="">
                        </div>
                        <div class="news_content">
                            <h3>lorem ipsum sit dolor amet bla bla blaa</h3>
                            <div class="news_date">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <i class="far fa-calendar-alt"></i>
                                            <p>@Model._single_news.xəberin_əlavə_edilən_gün.Value.Date.ToShortDateString()</p>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <p class="float-right"><i class="fas fa-eye"></i>Baxıldı: @Model._single_news.xəberin_baxiş_sayi</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p>
                                @Model._single_news.xəberin_məzmunu
                               </p>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <div class="recent">
                        <h5>Son Xeberler</h5>
                        @foreach (var item in Model._news)
    {
                    <a href="/Home/Single_news/@item.id"><p>@item.xəberin_adi</p></a>
                    <div class="line"></div>
}
                        
                    </div>
                    <iframe width="100%" height="315" style="margin-bottom: 30px;" src="https://www.youtube.com/embed/jWoXnWCt8tM" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    <div class="any_question">
                        <a href="/Home/QuestionPage">Bizə Sualınız Var?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
 



