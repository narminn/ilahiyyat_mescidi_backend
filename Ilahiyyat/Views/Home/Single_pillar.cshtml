@model Ilahiyyat.ViewModel.SinglePillarModel
@{
    ViewBag.Title = "Single_pillar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="box1">
        <div class="overlay2">
            <img src="~/Assets/img/hdg-img.png" alt="">
            <p>İSLAMIN ŞƏRTİ</p>
            <!-- <img src="~/Assets/img/mosque.png" alt=""> -->
        </div>
    </div>
    <section id="single_pillar">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <div class="pillar">
                        <div class="pillar_img">
                            <img src="@Model._pillar.şərtlərin_şəkili" alt="">
                        </div>
                        <div class="pillar_content">
                            <h3>@Model._pillar.şərtlərin_adi</h3>
                            <p>
                            @Model._pillar.şərtlərin_məzmunu   
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <div class="recent">
                        <h5>Islamin Sertleri</h5>
                        @foreach (var item in Model._pillars)
    {
                    <a href="/Home/Single_pillar/@item.id"><p>@item.şərtlərin_adi</p></a>
                    <div class="line"></div>
}
                       
                    </div>
                    <iframe width="100%" height="315" src="https://www.youtube.com/embed/jWoXnWCt8tM" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                    <div class="any_question">
                        <a href="#">Bizə Sualınız Var?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    

