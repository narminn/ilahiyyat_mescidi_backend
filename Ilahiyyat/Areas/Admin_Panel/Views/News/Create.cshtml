@model Ilahiyyat.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin_Panel/Views/Shared/Layout.cshtml";
}

<h2>Yenisini Əlavə Et</h2>

@using (Html.BeginForm("Create", "News", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="col-md-10">
    <div class="form-horizontal">
        <h4>Xəbər</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.xəberin_adi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.xəberin_adi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.xəberin_adi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.xəberin_məzmunu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.xəberin_məzmunu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.xəberin_məzmunu, "", new { @class = "text-danger" })
            </div>
        </div>

       

        

        <div class="form-group">
            @Html.LabelFor(model => model.xəberin_şəkili, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.xəberin_şəkili, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                @Html.ValidationMessageFor(model => model.xəberin_şəkili, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenisini Əlavə Et" class="btn btn-default" />
            </div>
        </div>
    </div>
    </div>
}

<div>
    @Html.ActionLink("Əvvələ Qayıt", "Index")
</div>
