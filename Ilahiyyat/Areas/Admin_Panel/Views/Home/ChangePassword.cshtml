
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin_Panel/Views/Shared/Layout.cshtml";
}



    <div class="page-content container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-wrapper">
                    <div class="box">
                        <div class="content-wrap">
                            <h6>Şifrəni Dəyiş</h6>

                            <form action="~/Admin_Panel/Home/ChangePassword" method="post">
                                <input class="form-control" type="password" placeholder="Köhnə Şifrə" name="old_password">
                                <input class="form-control" type="password" placeholder="Yeni Şifrə" name="new_password">
                                <input class="form-control" type="password" placeholder="Təsdiqləyin" name="conf_password">
                                @if (ViewBag.Message != null)
    {
                            <label class="alert alert-warning">
                                @ViewBag.Message
                            </label>
}
                                <div class="action">
                                    <button type="submit" class="btn btn-primary btn-block btn-large">Yadda saxla <i class="fas fa-sign-in-alt"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>




